<%= simple_form_for(@doubt) do |f| %>
<%= f.error_notification %>

<div class="field">
    <div class="control">
        <%= f.input :title, required: true, input_html: { class: 'input' }, wrapper: false, label_html: { class: "label" } %>
    </div>
</div>

<div class="field">
    <div class="control">
        <%= f.input :description, required: true, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: "label" } %>
    </div>
</div>

<div class="field">
    <label class="label">Category</label>
    <div class="control has-icons-left">
        <span class="select">
            <%= f.input_field :category_id, collection:@categories.map { |c| [c.category, c.id] }, prompt: "Select Category" %>
        </span>
        <span class="icon is-small is-left">
            <i class="fa fa-tag"></i>
        </span>
    </div>
</div>

<div class="field">
    <div class="control">
        <%= f.button :submit, class:"button is-info" %>
    </div>
</div>

<% end %>

